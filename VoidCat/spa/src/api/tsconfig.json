{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "module": "NodeNext",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["./src/**/*.ts"],
  "files": ["./src/index.ts"]
}
